{
  "name": "discloud-cli",
  "description": "A fast option to manage your apps on Discloud.",
  "version": "2.4.0",
  "bin": {
    "discloud": "bin/discloud"
  },
  "engines": {
    "node": ">=20.12"
  },
  "scripts": {
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch",
    "prepublish": "npm run build",
    "build": "node esbuild.mjs --production",
    "test": "npm run test:ts && npm run build && npm run test:node",
    "test:node": "node --test \"**/test/**/*.test.?(c|m)js\"",
    "test:ts": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/discloud/cli.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/discloud/cli/issues"
  },
  "homepage": "https://github.com/discloud/cli#readme",
  "dependencies": {
    "@discloudapp/api-types": "^1.0.0",
    "@discloudapp/util": "^1.0.0",
    "@inquirer/prompts": "^7.5.3",
    "adm-zip": "^0.5.16",
    "easy-table": "^1.2.0",
    "ejs": "^3.1.10",
    "glob": "^11.0.3",
    "globify-gitignore": "^1.0.3",
    "jose": "^6.0.11",
    "ora": "^8.2.0",
    "tslib": "^2.8.1",
    "update-notifier": "^7.3.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/adm-zip": "^0.5.7",
    "@types/ejs": "^3.1.5",
    "@types/node": "^22.15.32",
    "@types/update-notifier": "^6.0.8",
    "@types/yargs": "^17.0.33",
    "esbuild": "^0.25.5",
    "esbuild-plugin-version-injector": "^1.2.1",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
