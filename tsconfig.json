{
  "exclude": ["node_modules", "**/.ignore_*"],
  "include": ["src"],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "esnext",
    "lib": ["ESNext"],

    /* Modules */
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    // "types": [],

    /* Emit */
    "inlineSourceMap": true,
    "outDir": "build",
    "removeComments": true,
    "importHelpers": true,
    "newLine": "lf",
    "noEmitHelpers": true,

    /* Interop Constraints */
    "isolatedModules": true,
    // "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    // "noUncheckedIndexedAccess": true,

    /* Completeness */
    "skipLibCheck": true,
  }
}
